<div class="photoicon">
  <%= link_to image_tag('photoicon.png' , size: '200x200'), "/" %>
</div>
<div class="items-sell-contents">
  <div class="items-sell-main">
    <h2 class="items-sell-title">写真とその情報の入力</h2>
    <%= form_with model: @tweet, local: true do |f| %>
    <%# 上のform_withに定義されるmodelオプションはitems_pathを自動で生成するため、createアクションを定義しないとノーメソッドエラーになる。なので残しておく。 %>
    <%# render 'shared/error_messages', model: f.object %>
    <%# 上記のrenderメソッドは後のエラーメッセージ表示のため残しておく。 %>
    <%# 出品画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        投稿画像
      </div>
      <div class="click-upload">
        <p>
          下のボタンをクリックしてファイルをアップロードして下さい。
        </p>
        <%= f.file_field :photo, id:"item-image" %>
      </div>
    </div>

    <div class="new-items">
      <div class="weight-bold-text">
        写真のタイトル
      </div>
      <%= f.text_area :title, class:"items-text", id:"item-name", placeholder:"ここにタイトルを入力してください（必須 40文字まで)", maxlength:"40" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          投稿写真の説明
        </div>
        <%= f.text_area :description, class:"items-text", id:"item-info", placeholder:"ここに写真の説明を入力してください（必須 1,000文字まで入力できます）" ,rows:"7" ,maxlength:"1000" %>
      </div>


        <div class='weight-bold-text'>
          <label class="form-text">撮影された都道府県</label>
        </div>
        <%# 以下、'input-カラム名-wrap'のセレクタは未定義、必要であれば後で作成する %>
        <div class='input-prefecture-wrap'>
          <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, {}, {class:"input-prefecture", id:"prefecture_id"} %>
        </div>

      <div class="weight-bold-text">
        市町村名
      </div>
      <%= f.text_area :city, class:"items-text", id:"item-name", placeholder:"ここに写真の市区町村名を入力してください（必須 20文字まで)", maxlength:"20" %>
    </div>

    <div class="sell-btn-contents">
      <%= f.submit "投稿する", class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
  </div>
  <% end %>

  <footer class="items-sell-footer">
    <p class="inc">
      Copyright © PhotoBank All rights reserved.
    </p>
  </footer>
</div>